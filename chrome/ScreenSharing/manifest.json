{
  "name" : "Live Screen Sharing",
  "author": "WePow",
  "version" : "1.0",
  "manifest_version" : 2,
  "minimum_chrome_version": "34",
  "description" : "This Chrome extension helps you to share your screen on a Live interview.",
  "homepage_url": "http://wepow.com/",
  "background": {
    "scripts": ["background-script.js"],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://*.lvh.me/*",
      "https://*.wapow.co/*",
      "https://*.wopow.co/*",
      "https://*.wepowapp.com/*"
    ]
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
